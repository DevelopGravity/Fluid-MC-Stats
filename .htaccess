# BEGIN Security Features
# Deny config.php
<files config.php>
  order allow,deny
  deny from all
</files>

# Deny all .hta* files
<files ~ "^.*\.([Hh][Tt][Aa])">
  order allow,deny
  deny from all
  satisfy all
</files>
# END Security Features

